<view class="page-container flex flex-col pb-128rpx pt-40rpx">
  <nav-bar background="transparent" leftArrow="{{true}}" bind:leftTap="goBack" title="{{roomInfo.name}}"></nav-bar>

  <view class="grow">
    <van-cell-group inset>
      <van-cell title="房间名称" is-link value="{{roomInfo.roomName}}" center bind:click="editRoom" data-type="name"> </van-cell>
    </van-cell-group>

    <van-cell-group inset>
      <van-cell title="房间图标" is-link center bind:click="editRoom" data-type="icon">
        <image class="w-64rpx h-64rpx" src="/assets/img/room/{{roomInfo.roomIcon}}.png"></image>
      </van-cell>
    </van-cell-group>
  </view>

  <van-button class="mx-32rpx" size="large" type="danger" block bind:click="delRoom">删除房间</van-button>
</view>

<add-room show="{{isEdit}}" is-edit-name="{{editType === 'name'}}" is-edit-icon="{{editType === 'icon'}}" room-id="{{roomInfo.roomId}}" room-name="{{roomInfo.roomName}}" room-icon="{{roomInfo.roomIcon}}" bind:confirm="finishAddRoom" bind:close="onClose"></add-room>

<van-dialog id="van-dialog" confirm-button-color="#27282A" cancel-button-color="#27282A" />
