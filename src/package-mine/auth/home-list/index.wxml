<view class="page-container flex flex-col">
  <nav-bar background="transparent" leftArrow="{{true}}" bind:leftTap="goBackHome" title="选择家庭"></nav-bar>

  <view class="px-40rpx mt-20rpx">
    <text class="text-hex-555659 text-28">请选择需要关联的家庭</text>
  </view>

  <view id="content" class="flex-1">
    <scroll-view enhanced scroll-y show-scrollbar="{{false}}" style="height: {{listHeight}}px;">
      <van-cell-group wx:for="{{homeList}}" wx:key="mideaHouseId" inset>
        <van-cell title="{{item.mideaHouseName}}" title-class="py-16rpx pl-16rpx" center bind:click="onCheckHome" border="{{false}}" data-index="{{index}}">
          <image wx:if="{{item.checked}}" slot="right-icon" src="/assets/img/member-manage/tick.png" class="w-48 h-48"></image>
        </van-cell>
      </van-cell-group>
    </scroll-view>
  </view>

  <van-button class="mx-24rpx" size="large" type="primary" block bind:click="toDevicePage" disabled="{{!homeList.length}}">确定</van-button>

  <view class="list-bottom-placeholder"> </view>
</view>

<van-toast id="van-toast" />
