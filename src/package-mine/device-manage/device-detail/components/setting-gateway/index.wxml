<view class="w-750rpx flex flex-col">
  <view class="flex">
    <text class="ml-48rpx text-black-59 font-normal text-28rpx">参数设置</text>
  </view>
  <view>
    <van-cell-group inset>
      <van-cell title="信道" bind:click="toggleActionSheet" is-link="{{!isRelease && isManager}}" value="{{channelText}}"></van-cell>

      <van-cell v-if="{{!deviceInfo.isScreenGateway && isManager}}" title="更改WiFi" bind:click="toChangeWifi" is-link border="{{false}}"></van-cell>
    </van-cell-group>
  </view>
</view>

<van-popup show="{{ isShowChannelList }}" bind:close="toggleActionSheet" round position="bottom">
  <van-picker class="mt-40rpx" columns="{{ columns }}" bind:cancel="toggleActionSheet" bind:confirm="onSelectChannel" show-toolbar title="信道选择" />
</van-popup>

<van-toast id="van-toast" />
