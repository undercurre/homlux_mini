<view class="h-full flex flex-col">
  <view class="w-750rpx flex mt-16rpx">
    <text class="ml-48rpx text-black-59 font-normal text-28rpx">参数设置</text>
  </view>
  <view class="mt-24rpx w-750rpx" class="{{!deviceInfo.onLineStatus?'opacity-50':''}}">
    <van-cell-group inset>
      <van-cell center>
        <view slot="title" class="flex flex-col w-420rpx">
          <text class="text-32rpx text-black-2a">数据备份</text>
          <text class="text-24rpx text-black-tips">备份数据可用于还原网关至备份点</text>
        </view>
        <view>
          <van-button round type="primary" bind:click="handleBackup" loading="{{backup}}" loading-text="备份中">重新备份</van-button>
        </view>
      </van-cell>
      <van-cell center>
        <view slot="title" class="flex flex-col">
          <text class="text-32rpx text-black-2a">数据还原</text>
          <text class="text-24rpx text-black-tips">最近备份 2023-03-01</text>
        </view>
        <view>
          <view>
            <van-button round type="primary" bind:click="handleReset" loading="{{resetting}}" loading-text="还原中">开始还原</van-button>
          </view>
        </view>
      </van-cell>
    </van-cell-group>
  </view>
</view>
