.bgStyle {
  border: 2rpx solid #fff;
  background-image: linear-gradient(180deg, #d1e3fd 0%, #f5f9fe 42%, #ffffff 100%);
}

.valid-period {
  color: #488fff;
  width: 300rpx;
  height: 96rpx;
  border-radius: 24rpx;
  margin-top: 63rpx;
  background-image: linear-gradient(87deg, rgba(72, 143, 255, 0.1) 19%, rgba(126, 194, 255, 0.1) 93%);
}

.bottom-btn-wrapper {
  margin-bottom: calc(env(safe-area-inset-bottom) + 24rpx);
}

.bottom-btn {
  width: 686rpx !important;
  height: 88rpx !important;
  border-radius: 24rpx !important;
}

.show-time {
  width: 160rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  border-radius: 16rpx;
  background-color: #488fff;
  background-image: linear-gradient(147deg, #468cfb 0%, #6ba3fc 100%);
}

.text-psw {
  letter-spacing: 6rpx;
}
