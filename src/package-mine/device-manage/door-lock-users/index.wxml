<view
  class="fixed left-0 top-0 w-100vw h-100vh bg-hex-eef2f7"
  style="z-index: -1"
></view>

<view class="h-100vh flex flex-col">
  <!-- 标题 -->
  <nav-bar
    title="权限管理"
    left-arrow
    show-go-home
    bind:leftTap="goBack"
  ></nav-bar>

  <view class="tabs-wrapper mt-40rpx">
    <mz-tabs
      tabs="{{typeTabs}}"
      active="{{ defaultTabType }}"
      itemWidth="164"
      itemHeight="72"
      textColorActive="#488FFF"
      bind:change="onTabChanged"
    >
    </mz-tabs>
  </view>

  <view
    class="flex-1"
    id="content"
  >
    <swiper
      class="swiper-list"
      current="{{ tabIndex }}"
      bind:change="onSwiperChanged"
      duration="{{100}}"
      cache-extent="1"
    >
      <swiper-item
        wx:for="{{typeList}}"
        wx:for-item="userTab"
        wx:key="index"
        class="flex flex-col"
        catchtouchmove="true"
      >
        <view
          wx:if="{{userTab.list.length}}"
          class="mt-24rpx w-750rpx"
        >
          <mz-cell-group inset>
            <mz-cell
              wx:for="{{userTab.list}}"
              wx:for-index="j"
              title="{{item.pwdName}}"
              border="{{j !== userTab.list.length - 1}}"
            >
            </mz-cell>
          </mz-cell-group>
        </view>
        <view
          wx:else
          class="flex-1 flex-col-center"
        >
          <tips-box
            text="暂无用户"
            icon="{{defaultImgDir}}/no-user.png"
            size="300"
          ></tips-box>
        </view>
      </swiper-item>
    </swiper>
  </view>
</view>
