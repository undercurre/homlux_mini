<view class="page-container flex flex-col pb-128rpx">
  <nav-bar background="transparent" leftArrow="{{true}}" bind:leftTap="goBack" title="房间列表"></nav-bar>

  <view class="grow flex flex-col pt-40rpx">
    <scroll-view class="grow h-500 box-border">
      <van-cell-group wx:for="{{roomList}}" wx:key="roomId" inset>
        <van-cell title="{{item.roomName}}" is-link bind:click="editRoom" data-index="{{index}}" label="{{item.deviceNum}}个设备" center title-style="font-weight: 500;">
          <view slot="icon" class="bg-hex-F6FAFD rounded-32rpx p-16rpx mr-32rpx">
            <image class="w-64 h-64" src="/assets/img/room/{{item.roomIcon}}.png"></image>
          </view>
        </van-cell>
      </van-cell-group>
    </scroll-view>

    <van-button class="mx-32rpx" size="large" type="primary" block bind:click="addRoom">添加房间</van-button>
  </view>
</view>

<add-room show="{{isAddRoom}}" bind:confirm="finishAddRoom" bind:close="cancelAddRoom"></add-room>
