<import src="/commons/templates/popup.wxml" />
<van-popup show="{{ show }}" position="bottom" round bind:close="close" closeable>
  <view class="px-32rpx pt-48rpx text-black-2a flex-col">
    <text class="block pb-100rpx font-medium text-center text-36 leading-48rpx">选择转移对象</text>

    <view class="mb-80rpx">
      <view wx:for="{{userList}}" wx:key="userId" class="rounded-24rpx flex flex-row items-center mb-24rpx pl-32rpx pr-64rpx py-16rpx border-solid leading-44rpx {{index === selectIndex ? 'border-4rpx border-hex-488FFF' : 'border-2rpx border-hex-ddd'}}" bind:tap="selectUser" data-index="{{index}}">
        <image class="w-80rpx h-80rpx rounded-full" src="{{ item.headImageUrl ? item.headImageUrl : '/assets/img/default-img/default-avatar.png'}}"></image>

        <text class="text-32 text-black-2a grow pl-24rpx">{{ item.userName }}</text>

        <text class="text-32 text-black-59">{{ item.userHouseAuthName }}</text>
      </view>
    </view>

    <template is="bottom-btn" data="{{disabled: selectIndex < 0,confirmText: '确认转移'}}" />
  </view>
</van-popup>