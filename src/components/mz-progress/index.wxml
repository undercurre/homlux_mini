<view class="flex flex-col items-center">
  <van-progress wx:if="{{showProgress}}" class="w-400 mt-44rpx border-1rpx border-solid border-hex-d3d3d3 rounded-12rpx" percentage="{{ percentage }}" color="linear-gradient(165deg, #468CFB 0%, #6BA3FC 100%)" show-pivot="{{false}}" stroke-width="6" track-color="transparent" />

  <view wx:if="{{stepList.length}}" class="flex flex-col items-center pt-70rpx">
    <view wx:for="{{stepList}}" wx:key="text" class="transition flex felx-row items-center text-28 text-black-tips leading-40rpx pb-40rpx">
      <text class="{{ index <= activeIndex && 'text-black-59'}} mr-32rpx">{{item.text}}</text>

      <image wx:if="{{index === activeIndex}}" class="w-32 h-32" src="/assets/img/base/loading.png"></image>

      <svg-icon wx:else class="transition" name="icon-park-solid:check-one" width="16px" height="16px" color="{{index < activeIndex ? '#488fff' : 'transparent'}}"></svg-icon>
    </view>
  </view>
</view>
