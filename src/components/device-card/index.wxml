<view class="card-shadow card-clip w-160rpx h-216rpx rounded-32rpx box-border flex-col-center relative overflow-hidden" catchtap="handleCardTap">
  <image src="/assets/img/device/device-card{{select?'-select':''}}.png" class="w-160rpx h-216rpx absolute left-0 top-0" />
  <view class="absolute left-0 top-8rpx w-160rpx flex-center">
    <text class="text-26rpx text-hex-353535 font-medium">{{deviceName}}</text>
  </view>
  <view class="absolute left-0 top-0 flex-col-center w-full h-full">
    <image src="{{picUrl}}" class="w-72rpx h-72rpx"></image>
    <view wx:if="{{showControl}}" class="h-28rpx flex items-start">
      <text class="text-20rpx text-black-tips leading-none">{{deviceInfo.deviceName}}</text>
    </view>
  </view>
  <view wx:if="{{ripple}}" class="absolute left-80rpx w-250rpx h-250rpx rounded-999 {{onOff ? 'ripple-on' : 'ripple-off'}}" style="background: {{rippleColor}};animation: ripple-{{onOff ? 'on' : 'off'}} 1s ease forwards;"></view>
  <view wx:if="{{showControl}}" class="absolute left-0 bottom-0 w-160rpx flex-col-center" catchtap="handlePowerTap">
    <view class="h-12rpx"></view>
    <text wx:if="{{!deviceInfo.onLineStatus}}" class="text-24rpx text-hex-fbbb32 mb-18rpx">离线</text>
    <image wx:else src="{{controlBtnPic}}" class="w-48rpx h-48rpx mb-12rpx"></image>
  </view>
  <view wx:else class="absolute left-0 bottom-18rpx w-160rpx flex-center">
    <text wx:if="{{!deviceInfo.onLineStatus && deviceType !== 'switch'}}" class="text-24rpx text-hex-fbbb32">离线</text>
    <text wx:else class="text-20rpx mb-4rpx {{deviceInfo.onLineStatus ? 'text-black-tips' : 'text-hex-fbbb32'}}">{{switchName}}</text>
  </view>
</view>
<van-toast id="van-toast" />
