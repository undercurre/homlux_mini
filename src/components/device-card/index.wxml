<view class="card-shadow w-160rpx h-216rpx rounded-32rpx box-border flex-col-center relative" style="{{style}}" catchtap="handleCardTap">
  <view class="absolute left-0 top-8rpx w-160rpx flex-center">
    <text class="text-26rpx text-hex-353535 font-medium">{{deviceName}}</text>
  </view>
  <view class="flex-col-center">
    <image src="{{picUrl}}" class="w-72rpx h-72rpx"></image>
    <view wx:if="{{showControl}}" class="h-28rpx flex items-start">
      <text class="text-20rpx text-black-tips leading-none">{{switchName}}</text>
    </view>
  </view>
  <view wx:if="{{showControl}}" class="absolute left-0 bottom-6rpx w-160rpx flex-col-center" catchtap="handlePowerTap">
    <view class="h-24rpx"></view>
    <view class="w-48rpx h-48rpx">
      <image src="{{controlBtnPic}}" class="w-48rpx h-48rpx"></image>
    </view>
  </view>
  <view wx:if="{{!showControl}}" class="absolute left-0 bottom-11rpx w-160rpx flex-center">
    <text class="text-20rpx text-black-tips">{{switchName}}</text>
  </view>
</view>
