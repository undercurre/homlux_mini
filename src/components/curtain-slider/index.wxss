.curtain-container {
  background-image: linear-gradient(0deg, rgba(95, 156, 251, 0.32) 0%, rgba(231, 238, 250, 0.32) 100%);
}

.left-curtain,
.right-curtain {
  background-image: linear-gradient(180deg, rgba(135, 197, 255, 0.13) 0%, rgba(78, 144, 255, 0.32) 50%);
}

.curtain-handle {
  width: 8rpx;
  height: 44rpx;
  background-image: linear-gradient(-20deg, rgba(255, 255, 255, 0.61) 14%, #ffffff 83%);
  box-shadow: inset 0 2rpx 5rpx 0 #ffffff;
  border-radius: 5rpx;
  position: absolute;
  top: 144rpx;
}
