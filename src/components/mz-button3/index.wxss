.mz-button {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #eff0f3;
  border-radius: 40rpx;
  padding: 0 20rpx;
}

.icon-wrapper {
  position: relative;
  width: 48rpx;
  height: 48rpx;
}

.icon,
.iconActive {
  position: absolute;
  width: 100%;
  height: 100%;
}

.text {
  margin-left: 16rpx;
  font-size: 24rpx;
  width: 80rpx;
}

.textActive {
  color: #fff !important;
}
