<import src="/templates/popup.wxml" />
<van-popup show="{{ show }}" z-index="10000" round position="bottom" bind:close="onClickClose">
  <view class="w-750rpx h-710rpx relative flex flex-col items-center" id="content">
    <view class="absolute right-48rpx top-40rpx" bind:tap="onClickClose">
      <svg-icon name="icon-park:close" width="48rpx" height="48rpx"></svg-icon>
    </view>
    <template is="title" data="{{title: '添加设备'}}" />
    <view>
      <text class="text-black-59 text-26rpx">扫描设备的二维码或查找</text>
      <text bind:tap="toSearchSubDevice">
        <text class="text-hex-448fff text-26rpx ml-16rpx">附近的子设备</text>
        <text class="text-hex-448fff text-28rpx ml-16rpx font-bold">></text>
      </text>
    </view>
    <camera wx:if="{{ show }}" mode="scanCode" resolution="high" bindscancode="handleScanCode" device-position="back" flash="auto" binderror="error" class="w-640rpx h-416rpx rounded-48rpx mt-48rpx"></camera>
  </view>
</van-popup>
