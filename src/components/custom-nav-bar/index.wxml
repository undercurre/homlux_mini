<!--components/custom-nav-bar/index.wxml-->
<view
  class="fixed w-full"
  style="height: {{navigationBarAndStatusBarHeight}}; background: {{background}}; z-index: 1000;"
>
  <!--状态栏占位-->
  <view style="{{'height: ' + statusBarHeight}}"></view>
  <!--自定义导航栏-->
  <view class="flex justify-center items-center w-full relative" style="{{'height:' + navigationBarHeight}}">
    <slot name="left"></slot>
    <text>{{title}}</text>
  </view>
</view>
<!--空白占位fixed空出的位置-->
<view style="height: {{navigationBarAndStatusBarHeight}}; background: {{background}}"></view>
