<!--components/custom-nav-bar/index.wxml-->
<view wx:if="{{!disabled}}" class="fixed w-full left-0 top-0" style="height: {{navigationBarAndStatusBarHeight}}; background: {{background}}; z-index: {{zIndex}};">
  <!--状态栏占位-->
  <view style="{{'height: ' + statusBarHeight}}"></view>
  <!--自定义导航栏-->
  <view class="flex justify-center items-center w-full relative" style="{{'height:' + navigationBarHeight}}">
    <!-- 左侧内容 -->
    <view wx:if="{{leftArrow}}" class="absolute left-16rpx top-0 bottom-0 flex-center h-full" bindtap="handleLeftTap">
      <image src="{{leftIcon}}" class="w-48rpx h-48rpx mr-20rpx"></image>
    </view>
    <slot></slot>
    <!-- 标题 -->
    <view wx:if="{{title}}">
      <text class="text-36rpx font-medium">{{title}}</text>
    </view>
  </view>
</view>
<!--空白占位fixed空出的位置-->
<view style="height: {{navigationBarAndStatusBarHeight}}; background: {{background}}"></view>
