.tool-box {
  top: 0;
  left: 0;
  width: 750rpx;
  padding: 0 40rpx;
  border: 2rpx solid #fff;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-radius: 0 0 32rpx 32rpx;
  background-image: linear-gradient(180deg, #f2f5fc 10%, #ffffff 74%);
  box-shadow: 0px 4px 16px 0px rgba(97, 109, 136, 0.1);
}

.cancel-select-btn {
  border: 2rpx solid rgba(151, 151, 151, 0.5);
}
.scene-icon {
  margin-right: -14rpx;
}

.fav-btn {
  margin-right: 24rpx;
  padding: 0 !important;
  color: #fff !important;
  background-image: linear-gradient(155deg, #468cfb 6%, #6ba3fc 96%) !important;
  border-radius: 24rpx !important;
  width: 148rpx !important;
  height: 60rpx !important;
  font-size: 28rpx !important;
  font-weight: 500 !important;
  border-radius: 20rpx !important;
}

.arrow {
  border-bottom: 12rpx solid transparent;
  border-top: 12rpx solid #000;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  top: 24rpx;
}

.round-btn-border {
  border: 1px solid rgba(162, 162, 162, 0.25) !important;
}

.tips-shadow {
  box-shadow: 0 0 400rpx;
}

.skeleton_fix {
  height: 210rpx !important;
  transform: translateX(-28rpx);
}

.shake {
  animation: shake 0.4s steps(4) infinite;
}

@keyframes shake {
  0% {
    transform: rotate(0deg);
  }
  25% {
    transform: rotate(3deg);
  }
  50% {
    transform: rotate(0deg);
  }
  75% {
    transform: rotate(-3deg);
  }
}
