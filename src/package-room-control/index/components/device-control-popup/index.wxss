/* package-room/index/components/popup-select-light/index.wxss */
.tab-title-check {
  color: #27282a;
  font-weight: 600;
}

.tab-title-uncheck {
  color: #555659;
  font-weight: 400;
}

.switch-cell {
  border: 2rpx solid #dddddd;
  border-radius: 32rpx;
  padding: 24rpx 32rpx;
}

.slider-brightness-bar {
  background-image: linear-gradient(270deg, #ffffff 0%, #507fff 100%) !important;
}

.slider-color-temp-bar {
  background-image: linear-gradient(90deg, #5683ff 2%, #f6e2d1 60%, #f7e1cb 70%, #ffd54d 100%, #ffc300 100%) !important;
}
