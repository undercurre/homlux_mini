/* package-room/index/components/popup-select-light/index.wxss */
.tab-title-check {
  color: #27282a;
  font-weight: 600;
}

.tab-title-uncheck {
  color: #555659;
  font-weight: 400;
}

.switch-cell {
  border: 2rpx solid #dddddd;
  border-radius: 32rpx;
  padding: 24rpx 32rpx;
}

.btn-press {
  background-image: linear-gradient(155deg, #468cfb 6%, #6ba3fc 96%);
  animation: btn-press-ani 0.6s ease forwards;
}

.slider-brightness-bar {
  background-image: linear-gradient(270deg, #ffffff 0%, #507fff 100%) !important;
}

.slider-color-temp-bar {
  background-image: linear-gradient(270deg, #c7ecff 8%, #fdeeba 75%, #f9dd9f 100%) !important;
}

.arrow-up {
  animation: arrow-up-ani 0.8s ease forwards;
}
.arrow-down {
  animation: arrow-down-ani 0.8s ease forwards;
}

@keyframes arrow-up-ani {
  0% {
    transform: rotateX(0deg);
  }
  100% {
    transform: rotateX(180deg);
  }
}
@keyframes arrow-down-ani {
  0% {
    transform: rotateX(180deg);
  }
  100% {
    transform: rotateX(0deg);
  }
}

@keyframes btn-press-ani {
  0% {
    opacity: 0;
  }
  30% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}
