/* package-room/index/components/popup-select-light/index.wxss */
.popup-shadow {
  box-shadow: 0px -4px 32px 0px rgba(97, 109, 136, 0.1);
}

.all-control-btn-bg {
  background: rgba(0, 0, 0, 0.06);
}

.tab-title {
  color: #27282a;
  font-weight: 600;
  font-size: 36rpx;
  font-weight: bold;
}

.switch-cell {
  border: 2rpx solid #ddd;
  border-radius: 32rpx;
  padding: 34rpx 32rpx !important;
  height: 112rpx;
}

.btn-press {
  background-image: linear-gradient(155deg, #468cfb 6%, #6ba3fc 96%);
  animation: btn-press-ani 0.6s ease forwards;
}

.slider-brightness-bar {
  background-image: linear-gradient(270deg, #dbe5ff 0%, #507fff 100%) !important;
}

.slider-color-temp-bar {
  background-image: linear-gradient(270deg, #c7ecff 8%, #fdeeba 75%, #f9dd9f 100%) !important;
}

.arrow-up {
  animation: arrow-up-ani 0.8s ease forwards;
}
.arrow-down {
  animation: arrow-down-ani 0.8s ease forwards;
}

.split {
  border-left: 1px solid rgba(213,213,213,1);
}

@keyframes arrow-up-ani {
  0% {
    transform: rotateX(0deg);
  }
  100% {
    transform: rotateX(180deg);
  }
}
@keyframes arrow-down-ani {
  0% {
    transform: rotateX(180deg);
  }
  100% {
    transform: rotateX(0deg);
  }
}

@keyframes btn-press-ani {
  0% {
    opacity: 0;
  }
  30% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}
