.slider-color-temp-bar {
  background-image: linear-gradient(270deg, #8fadfe 0%, #fff6e6 50%, #ffdc6d 100%) !important;
}

.onoff-slider-rail {
  background: rgba(176, 176, 176, 0.1);
}

.onoff-slider {
  background: #ffffff;
  box-shadow: 0px 2px 12px 0px rgba(97, 109, 136, 0.15);
  border-radius: 32rpx;
  width: 334rpx;
  height: 84rpx;
  position: absolute;
  top: 0;
}
.slidr-button {
  background-image: linear-gradient(30deg, rgba(255, 255, 255, 1) 0%, rgba(255, 255, 255, 0) 60%) !important;
}
