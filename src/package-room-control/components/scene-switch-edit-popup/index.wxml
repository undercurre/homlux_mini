<import src="/commons/templates/popup.wxml" />
<van-popup show="{{ show }}" round position="bottom" bind:close="handleClose">
  <view class="w-750rpx relative flex flex-col items-center">
    <template is="close" />
    <template is="title" data="{{title: title}}" />
    <view class="flex-col-center mt-62rpx">
      <view bindtap="handleOnOffChange" data-value="{{1}}" class="box-border flex-center w-686rpx h-96rpx rounded-32rpx {{OnOff?'select-card':'unselect-card'}}">
        <text>开灯</text>
      </view>
      <view bindtap="handleOnOffChange" data-value="{{0}}" class="mt-24rpx box-border flex-center w-686rpx h-96rpx rounded-32rpx {{OnOff?'unselect-card':'select-card'}}">
        <text>关灯</text>
      </view>
    </view>
    <view class="h-92rpx"></view>
    <template is="bottom-btn" />
  </view>
</van-popup>
