<import src="/commons/templates/popup.wxml" />
<van-popup show="{{ show }}" round position="bottom" bind:close="handleClose">
  <view class="w-750rpx h-600rpx relative flex flex-col items-center">
    <template is="title" data="{{title: '修改名称'}}" />
    <view class="flex-1 mt-98rpx w-686rpx">
      <van-field model:value="{{ name }}" placeholder="自定义场景" custom-style="padding: 28rpx 32rpx;border: 2rpx solid #DDDDDD;border-radius: 24rpx;" clearable="{{true}}"> </van-field>
    </view>
    <template is="bottom-btn" />
  </view>
</van-popup>
