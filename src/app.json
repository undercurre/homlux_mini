{
  "pages": ["pages/index/index", "pages/login/index", "pages/mine/index"],
  "subpackages": [
    {
      "root": "package-distribution",
      "pages": [
        "scan/index",
        "check-gateway/index",
        "add-gateway/index",
        "wifi-connect/index",
        "add-subdevice/index",
        "search-subdevice/index",
        "bind-home/index"
      ]
    },
    {
      "root": "package-mine",
      "pages": [
        "home-manage/index",
        "home-location/index",
        "room-manage/index",
        "room-detail/index",
        "member-manage/index",
        "accept-invitation/index",
        "device-replace/index",
        "ota/index",
        "device-manage/index",
        "device-manage/device-detail/index"
      ]
    },
    {
      "root": "package-room-control",
      "pages": ["index/index", "scene-edit/index", "scene-list/index"]
    }
  ],
  "tabBar": {
    "custom": true,
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "首页"
      },
      {
        "pagePath": "pages/mine/index",
        "text": "我的"
      }
    ]
  },
  "usingComponents": {
    "van-button": "@vant/weapp/button/index",
    "van-overlay": "@vant/weapp/overlay/index",
    "van-cell": "@vant/weapp/cell/index",
    "van-slider": "@vant/weapp/slider/index",
    "van-popup": "@vant/weapp/popup/index",
    "van-field": "@vant/weapp/field/index",
    "van-cell-group": "@vant/weapp/cell-group/index",
    "nav-bar": "./components/custom-nav-bar/index",
    "home-select-menu": "./components/home-select-menu/index",
    "add-room": "./components/add-room/index",
    "add-device": "./components/add-device/index",
    "svg-icon": "./components/svg-icon/index",
    "device-card": "./components/device-card/index",
    "van-dialog": "@vant/weapp/dialog/index"
  },
  "window": {
    "navigationStyle": "custom",
    "backgroundTextStyle": "light",
    "backgroundColor": "#eef2f7"
  },
  "sitemapLocation": "sitemap.json",
  "networkTimeout": {
    "request": 10000,
    "downloadFile": 10000
  },
  "debug": true,
  "permission": {
    "scope.userLocation": {
      "desc": "你的位置信息将用于辅助家庭设备配网"
    }
  }
}
