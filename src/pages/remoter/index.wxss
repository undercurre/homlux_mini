/* pages/login/index.wxss */
page {
  height: 100%;
}

.tips-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 99999;
  background: rgba(0, 0, 0, 0.6);
}

.list-bottom-placeholder {
  height: calc(env(safe-area-inset-bottom) + 32rpx);
}

.van-button__loading-text {
  color: #666;
}

.tips-btn {
  border-radius: 32rpx;
  width: 160rpx;
  height: 64rpx;
  background-image: linear-gradient(134deg, #4278ce 32%, #5a7fbd 91%);
}

.tips-step1-img {
  width: 702rpx;
  height: 332rpx;
  margin: 88rpx auto 0;
}
.tips-step-arrow {
  position: absolute;
  top: 150rpx;
  right: 180rpx;
  width: 136rpx;
  height: 170rpx;
}
.tips-step-arrow2 {
  position: absolute;
  bottom: calc(env(safe-area-inset-bottom) + 500rpx);
  right: 228rpx;
  width: 238rpx;
  height: 300rpx;
}
.tips-step3-txt {
  position: absolute;
  width: 100%;
  bottom: calc(env(safe-area-inset-bottom) + 660rpx);
}
.tips-step-next {
  position: absolute;
  bottom: calc(env(safe-area-inset-bottom) + 240rpx);
  left: 232rpx;
  width: 264rpx;
  height: 96rpx;
}
.tips-step-popup {
  z-index: 99999;
  position: absolute;
  width: 750rpx;
  height: 760rpx;
  bottom: 0;
}
.tips-step-txt {
  width: 600rpx;
  margin-left: auto;
  margin-right: auto;
  line-height: 1.5;
}
