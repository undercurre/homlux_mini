<!--pages/index/components/dropdown-menu/index.wxml-->
<view class="bg fixed flex flex-col items-center p-10rpx rounded-32rpx w-256rpx" style="right: {{x}}; top: {{y}}; z-index: 100;" wx:if="{{isShow}}">
  <view class="flex justify-center items-center" bindtap="handleAddDevice">
    <image src="/assets/img/home/add-device.png" class="w-48rpx h-48rpx py-24rpx"></image>
    <text class="p-10rpx text-white text-28rpx ml-24rpx">添加设备</text>
  </view>
  <view class="bg-hex-717171 w-208rpx h-1rpx"></view>
  <view class="flex justify-center items-center" bindtap="handleAddRoom">
    <image src="/assets/img/home/add-room.png" class="w-48rpx h-48rpx py-24rpx"></image>
    <text class="p-10rpx text-white text-28rpx ml-24rpx">添加房间</text>
  </view>
  <view class="bg-hex-717171 w-208rpx h-1rpx"></view>
  <view class="flex justify-center items-center" bindtap="handleInviteFamily">
    <image src="/assets/img/home/invite-family.png" class="w-48rpx h-48rpx py-24rpx"></image>
    <text class="p-10rpx text-white text-28rpx ml-24rpx">邀请成员</text>
  </view>
  <view class="arrow absolute right-32rpx top-0 w-0 h-0"></view>
</view>
