<!--pages/protoShow/index.wxml-->
<view class="fixed left-0 top-0 w-100vw h-100vh bg-hex-eef2f7" style="z-index: -1"></view>

<!-- 遮住顶部 -->
<view style="height: {{navigationBarAndStatusBarHeight}};" class="fixed left-0 top-0 z-110 overflow-hidden w-750rpx">
  <view class="w-100vw h-100vh absolute left-0 top-0 bg-hex-eef2f7 z-111"></view>
</view>

<!-- 标题 -->
<nav-bar title="{{title}}" z-index="{{113}}" left-arrow bind:leftTap="goBack"></nav-bar>

<view class="w-750rpx flex-center">
  <scroll-view scroll-x scroll-y style="width: calc(100vw - 48rpx);height: calc(100vh - navigationBarAndStatusBarHeight);">
    <rich-text nodes="{{doc}}"></rich-text>
  </scroll-view>
</view>