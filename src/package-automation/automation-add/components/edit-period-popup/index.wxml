<import src="/commons/templates/popup.wxml" />
<van-popup show="{{ show }}" round position="bottom" bind:close="handleClose" closeable>
  <view class="w-750rpx h-1300rpx relative flex flex-col items-center">
    <template is="title" data="{{title: '选择时间'}}" />
    <view class="h-52rpx"></view>
    <time-picker-view value="{{value}}"></time-picker-view>
    <view class="mt-80rpx w-750rpx px-11rpx box-border">
      <text class="ml-58rpx text-32rpx font-medium text-hex-27282a">重复设置</text>
      <period-select></period-select>
    </view>
    <view class="absolute bottom-0">
      <template is="bottom-btn" />
    </view>
  </view>
</van-popup>
