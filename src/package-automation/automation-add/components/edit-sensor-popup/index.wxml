<mz-popup
  show="{{ show }}"
  z-index="1002"
  round
  position="bottom"
  bind:close="handleClose"
  closeable
  catchtouchmove="blank"
>
  <view
    class="w-750rpx relative flex flex-col items-center"
    style="height:{{popupHeight}}rpx;"
  >
    <text class="h-50rpx text-36rpx text-black-2a mt-48rpx font-medium">{{title}}</text>
    <view class="w-686rpx mt-48rpx">
      <sensor-ability-select
        productId="{{productId}}"
        checkList="{{checkList}}"
        bind:change="handleChange"
      ></sensor-ability-select>
    </view>
    <view class="h-62rpx"></view>
    <view class="flex w-686rpx">
      <mz-button
        type="primary"
        class="flex-1"
        size="large"
        bind:click="handleConfirm"
        >确定</mz-button
      >
    </view>
  </view>
</mz-popup>
