<import src="/commons/templates/popup.wxml" />
<van-popup show="{{ show }}" round position="bottom" bind:close="handleClose" closeable>
  <view class="w-750rpx h-600rpx relative flex flex-col items-center">
    <template is="title" data="{{title: '延长时间'}}" />
    <view class="h-52rpx"></view>
    <time-picker-view value="{{value}}" colFir="{{minutes}}" colSec="{{seconds}}" colFirUnit="分" colSecUnit="秒"></time-picker-view>
    <view class="h-62rpx"></view>
    <template is="bottom-btn" />
  </view>
</van-popup>
