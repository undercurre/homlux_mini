.exec-btn {
  padding: 0 !important;
  border-radius: 24rpx !important;
  width: 100rpx !important;
  height: 60rpx !important;
  font-size: 28rpx !important;
  font-weight: 400 !important;
  border: 2rpx solid #555659 !important;
  color: #555659 !important;
}
.btn-raw {
  background: rgba(72, 143, 255, 0.12);
}
.btn-tap {
  background-image: linear-gradient(160deg, #468cfb 0%, #6ba3fc 100%);
  animation: btn-press-ani 0.6s ease forwards;
}

@keyframes btn-press-ani {
  0% {
    opacity: 0;
  }
  30% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}
.cell--hover {
  background-color: #f2f3f5;
}
.cell-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 96rpx;
}

.title {
  font-size: 32rpx;
  color: #27282a;
}

.label {
  font-size: 24rpx;
  color: #555659;
  opacity: 0.5;
}

.cell-right {
  display: flex;
  flex-grow: 1;
  flex-direction: row;
  align-items: center;
  padding-left: 32rpx;
  justify-content: flex-end;
}
