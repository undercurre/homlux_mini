<!-- 背景 -->
<view class="w-100vw h-100vh fixed left-0 top-0 bg-hex-f4f8ff bg-z-index-1"></view>
<view class="fixed left-0 top-0 w-100vw h-50vh bg-z-index" style="background: linear-gradient(180deg, rgba(87, 105, 255, 0.1) 0%, rgba(87, 105, 255, 0) 100%)"></view>
<view class="h-100vh flex flex-col items-center">
  <!-- 标题 -->
  <nav-bar title="日志" left-arrow bind:leftTap="goBack"></nav-bar>

  <view class="flex-1 w-750rpx" id="content">

    <scroll-view scroll-y="{{true}}" style="height: {{contentHeight}}px;">
      <view class="h-44rpx"></view>
      <view wx:for="{{autoSceneLog}}" wx:for-item="logs" wx:for-index="date" wx:key="date">
        <view class="mb-24rpx ml-46rpx">
          <text class="text-hex-555659 text-28rpx">{{date}}</text>
        </view>
        <van-cell-group inset border="{{false}}">
          <van-cell value-class="cell-value" wx:key="id" wx:for="{{logs}}" title="{{item.name}}" label="{{item.desc}}" center title-style="font-weight: 500;flex:2;" border="{{index === logs.length - 1 ? false : true}}" value="{{item.isSuccess}}">
            <view slot="icon" class="rounded-32rpx p-16rpx mr-32rpx">
              <image class="w-72 h-72" src="/assets/img/scene/{{item.icon}}.png"></image>
            </view>

          </van-cell>
        </van-cell-group>

        <view class="h-32rpx"></view>
      </view>
    </scroll-view>
  </view>

</view>

<van-toast id="van-toast" />