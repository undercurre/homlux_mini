<!--custom-tab-bar/index.wxml-->
<view class="tab-bar fixed left-0 bottom-0 w-full bg-white h-96rpx flex">
  <view
    class="flex-1 flex justify-center items-center flex-col"
    wx:for="{{list}}"
    data-path="{{item.path}}"
    wx:key="text"
    bindtap="switchTab"
    data-index="{{index}}"
  >
    <svg-icon
      load="{{isLoadedSvg}}"
      name="{{selected === index ? item.selectedIcon : item.unSelectedIcon}}"
      width="44rpx"
      height="44rpx"
    ></svg-icon>
    <text style="color: {{selected === index ? selectedColor : color}}; font-size: 20rpx;">{{item.text}}</text>
  </view>
</view>
