/* /skyline-components/mz-pop-menu/index.wxss */
.overlay {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0);
}

.bg {
  background: #454546;
  box-shadow: 0px 8px 26px 0px rgba(116, 80, 80, 0.33);
  opacity: 0;
}

.arrow {
  border-bottom: 16rpx solid #454546;
  border-top: 16rpx solid transparent;
  border-left: 16rpx solid transparent;
  border-right: 16rpx solid transparent;
  top: -28rpx;
}

.rotate-180 {
  transform: rotate(180deg);
}
