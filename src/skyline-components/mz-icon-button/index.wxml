<tap-gesture-handler worklet:ongesture="handleTap">
  <view class="mz-button flex-col-center {{ disabled ? 'disabled' : '' }}">
    <view class="icon-wrapper">
      <image
        class="icon"
        src="{{icon}}"
      ></image>
      <image
        wx:if="{{iconActive}}"
        class="iconActive"
        src="{{iconActive}}"
        style="opacity: 0"
      ></image>
    </view>
    <view
      class="text"
      wx:if="{{text}}"
      >{{text}}</view
    >
    <slot></slot>
  </view>
</tap-gesture-handler>
