.mz-slider {
  position: relative;
  background-color: #eff0f3;
  border-radius: 24rpx;
}

.mz-slider-bar {
  background-color: rgb(80, 127, 255);
  border-radius: 24rpx;
  width: 2rpx;
  height: 100%;
}

.mz-slider-button {
  background-color: #fff;
  border-radius: 8rpx;
  height: 40rpx;
  width: 8rpx;
}

.mz-slider--disabled {
  opacity: 0.5;
}

.button-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  justify-content: center;
  align-items: center;
}

.slider-toast {
  position: absolute;
  background: rgba(0, 0, 0, 0.72);
  padding: 12rpx 14rpx;
  top: -66rpx;
  min-width: 60rpx;
  text-align: center;
  border-radius: 12rpx;
  transition: 'opacity 0.3s';
  pointer-events: none;
}

.toast-text {
  color: #fff;
  font-size: 24rpx;
}

.arrow {
  position: absolute;
  width: 0;
  height: 0;
  border-top: 8rpx solid #454546;
  border-bottom: 8rpx solid transparent;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  top: 40rpx;
  left: 50%;
  margin-left: -8rpx;
}
