<wxs
  module="handler"
  src="./index.wxs"
></wxs>

<!-- bind:touchstart="{{disabled ? '': handler.onTouchstart}}" catch:touchmove="{{disabled ? '': handler.onTouchmove}}" bind:touchend="{{disabled ? '': handler.onTouchend}}" -->

<view
  id="mz-slider"
  class="relative custom-class mz-slider {{ disabled ? 'mz-slider--disabled' : '' }}"
  style="background:{{ inactiveColor }}; height: {{barHeight}}rpx; line-height:  {{barHeight}}rpx;"
  value="{{value}}"
>
  <view
    id="active-bar--{{key}}"
    class="mz-slider-bar"
    style="background:{{activeColor}}"
  >
    <view
      id="button"
      wx:if="{{isBtnInset}}"
      class="button px-12rpx"
    >
      <slot
        wx:if="{{ useButtonSlot }}"
        name="button"
      ></slot>
      <view
        wx:else
        class="mz-slider-button"
      ></view>
    </view>
  </view>

  <mz-movable
    direction="horizontal"
    trigger="pan"
    key="{{key}}"
    bind:dragMove="dragMove"
  >
    <view
      id="button"
      wx:if="{{!isBtnInset}}"
      class="button button-outset"
      style="top: {{btnTop}}"
    >
      <slot
        wx:if="{{ useButtonSlot }}"
        name="button"
      ></slot>
      <view
        wx:else
        class="mz-slider-button"
      ></view>
    </view>
  </mz-movable>

