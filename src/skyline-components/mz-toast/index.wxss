.mz-toast {
  --toast-max-width: 80%;
  --toast-text-color: #fff;
  --toast-icon-size: 36px;
  --toast-text-min-width: 96px;
  --toast-text-padding: 16rpx 24rpx;
  --toast-default-padding: 32rpx;
  --toast-default-width: 88px;
  --toast-default-min-height: 88px;
  --toast-background-color: rgba(0, 0, 0, 0.8);
  --toast-border-radius: 46rpx;
  --toast-font-size: 32rpx;
  --toast-line-height: 44rpx;
}

.mz-toast {
  word-wrap: break-word;
  align-items: center;
  background-color: var(--toast-background-color, rgba(0, 0, 0, 0.7));
  border-radius: var(--toast-border-radius, 8px);
  box-sizing: initial;
  color: var(--toast-text-color, #fff);
  display: flex;
  flex-direction: column;
  font-size: var(--toast-font-size, 14px);
  justify-content: center;
  line-height: var(--toast-line-height, 20px);
  white-space: pre-wrap;
}

.mz-toast__container {
  left: 50%;
  max-width: var(--toast-max-width, 70%);
  position: fixed;
  top: 50%;
  transform: translate(-50%, -50%);
  width: -webkit-fit-content;
  width: fit-content;
}

.mz-toast--text {
  min-width: var(--toast-text-min-width, 96px);
  padding: var(--toast-text-padding, 8px 12px);
  text-align: center;
}

.mz-toast--icon {
  min-height: var(--toast-default-min-height, 88px);
  padding: var(--toast-default-padding, 16px);
  width: var(--toast-default-width, 88px);
}

.mz-toast--icon .mz-toast__icon {
  font-size: var(--toast-icon-size, 36px);
}

.mz-toast--icon .mz-toast__text {
  padding-top: 8px;
}

.mz-toast__loading {
  margin: 10px 0;
}

.mz-toast--top {
  transform: translateY(-30vh);
}

.mz-toast--bottom {
  transform: translateY(30vh);
}
